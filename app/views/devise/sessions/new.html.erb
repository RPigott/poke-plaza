<div class="userform col-lg-6 col-lg-offset-3">
<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-horizontal") do |f| %>

  <fieldset>
  <legend>Log in</legend>

  <div class="form-group">
    <%= f.label :username, class: ["control-label", "col-lg-2"] %>
    <div class="col-lg-10">
      <%= f.text_field :username, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: ["control-label", "col-lg-2"] %>
    <div class="col-lg-10">
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      <% if @minimum_password_length %>
        <%= content_tag :em, "(#{@minimum_password_length} characters minimum)", class: "help-block" %>
      <% end %>
    </div>
  </div>
  
  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>
    
  <div class="actions form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <%= button_tag "Cancel", type: :reset, class: ["btn" ,"btn-default"]  %>
      <%= f.submit "Log in", class: ["btn", "btn-primary"] %>
    </div>
  </div>
  
  </fieldset>
<% end %>
<%= render "devise/shared/links" %>
</div>



