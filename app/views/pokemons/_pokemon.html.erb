<tr>
    <% columns.each do |column| %>
        <% partial_name = column.sub(/\s/, "").downcase %>
        <% if partial_name == 'ivs' %>
            <%= render "pokemons/#{partial_name}", :pokemon => pokemon %>
        <% else %>
            <%= content_tag :td,
                render("pokemons/#{partial_name}", :pokemon => pokemon),
                :class => partial_name
            %>
        <% end %>
    <% end %>
</tr>
