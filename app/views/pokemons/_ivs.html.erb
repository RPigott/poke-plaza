<%= content_tag :td, (pokemon.HPIV  || "x"),
    class: ["hpiv" ,],
    :data => {value: pokemon.HPIV }
%>

<% positive = pokemon.nature&.positive %>
<% negative = pokemon.nature&.negative %>

<%= content_tag :td, (pokemon.AtkIV || "x"),
    class: ["atkiv",
            ("nature-positive" if (positive == "Atk") && (negative != "Atk")),
            ("nature-negative" if (negative == "Atk") && (positive != "Atk"))],
    :data => {value: pokemon.AtkIV}
%>

