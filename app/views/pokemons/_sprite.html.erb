<%=
  tag :span,
    :class => [
      "pkspr",
      "pokemon",
      "pkmn-#{pokemon.sprite_name}",
      ("color-shiny" if pokemon.shiny),
      ("gender-#{pokemon.gender}" if pokemon.species.ratio),
      "form-#{pokemon.form_name}"
      ],
    :data => {toggle: "tooltip"},
    :title => "#{pokemon.species_form_name}#{' (shiny)' if pokemon.shiny}#{' @ ' + pokemon.item.name if pokemon.item}"
%>

<% if pokemon.shiny %>
  <%= image_tag "ShinyStar.png",
    :class => "shiny-star"
  %>
<% end %>

<% if pokemon.item %>
  <%= image_tag "helditem.png",
    :class => "held-item"
  %>
<% end %>