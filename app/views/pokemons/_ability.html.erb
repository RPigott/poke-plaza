<% if pokemon.ability %>
    <%= content_tag :span,
        pokemon.ability.name,
        :class => [("ability-hidden" if pokemon.ability == pokemon.species.ability3)],
        :data => {toggle: "tooltip"},
        :title => "#{pokemon.ability&.name}#{' (HA)' if pokemon.ability == pokemon.species.ability3}"
    %>
<% end %>