<!DOCTYPE html>
<html>
  <head>
    <title>PokePlaza</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <% favicon_link_tag "pokeball.ico" %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">Poke-Plaza</a>
        </div>
    
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li><a href="#">My Pokemon</a></li>
          </ul>
          <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Bulbasaur">
            </div>
            <button type="submit" class="btn btn-default">Find Trade</button>
          </form>
        </div>
      </div>
    </nav>
    
  	<%= content_tag :p, notice, :class => "notice" if notice %>
  	<%= content_tag :p, alert, :class => "alert" if alert %>
  	
    <%= yield %>
  </body>
</html>
